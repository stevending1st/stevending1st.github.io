---
import MdiKeyBoardBackspace from "../icon/MdiKeyBoardBackspace.astro";

const { backLink="/" } = Astro.props 
---

<div class="page-menu">
  <a href={backLink} class="back-btn">
    <MdiKeyBoardBackspace width="1.5rem" height="1.5rem" />
  </a>
</div>

<style>
  .page-menu {
    width: 100%;
    margin-top: 3rem;
    margin-left: 2rem;
  }

  .back-btn:hover {
    color: blueviolet;
    background-color: #333;
  }

  .back-btn {
    color: white;
    height: 2rem;
    width: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 20%;
  }
</style>
